- name: install docker
  hosts: vm1,vm2
  gather_facts: false

  tasks:
  - name: ping
    ping:
    register: result
  - name: install-docker
    become: yes
    apt:
      name: docker.io
      state: present
  - name: ensure docker service is running
    become: yes
    service:
      name: docker
      state: started
